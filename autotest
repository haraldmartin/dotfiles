require 'autotest/redgreen'

module Autotest::Growl
  def self.growl title, msg, img, pri=0, sticky=""
    system "/usr/local/bin/growlnotify -n autotest --image #{img} -p #{pri} -m #{msg.inspect} #{title} #{sticky}"
  end
  Autotest.add_hook :ran_command do |at|
    image_root = "~/Library/Autotest"
    results = [at.results].flatten.join("n")
    output = results.slice(/(\d+)\stests,\s(\d+)\sassertions,\s(\d+)\sfailures,\s(\d+)\serrors/)
    if output
      if $~[3].to_i > 0 || $~[4].to_i > 0
        #cnt = [(9 + $~[3].to_i + $~[4].to_i) / 10 * 10, 50].min
        growl "FAIL", "#{output}", "#{image_root}/fail.png", 2
      else
        growl "Pass", "#{output}", "#{image_root}/pass.png"
      end
    end
  end
end
